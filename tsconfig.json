{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".", // Add this!
    "paths": {
      "$lib/*": ["./lib/*"],
      "$lib": ["./lib"],
      "$modules/*": ["./modules/*"],
      "$modules": ["./modules"]
    }
  },
  "include": ["src"]
}
